<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>cHarLs</title>

		<!-- BootStrap links -->
		<link rel="stylesheet" href="/css/bootstrap.min.css" />
		<script src="/js/bootstrap.min.js"></script>
		<!-- CSS -->
		<link rel="stylesheet" href="/css/home-style.css" />
		<!-- Jquery -->
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"
			integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		></script>
		<script src="/js/authenticate.js"></script>
	</head>
	<body>
		<div class="conts">
			<nav class="navbar navbar-expand-lg navbar-custom">
				<div class="container-fluid">
					<a class="navbar-brand" href="#">
						<img
							src="/images/logo.png"
							alt="Bootstrap"
							width="100"
							height="70"
						/>
					</a>
					<button
						class="navbar-toggler"
						type="button"
						data-bs-toggle="collapse"
						data-bs-target="#navbarNav"
						aria-controls="navbarNav"
						aria-expanded="false"
						aria-label="Toggle navigation"
					>
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav ms-auto">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="/">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/find">Find a Car</a>
							</li>
							<li class="nav-item border-end">
								<a class="nav-link" href="/about">About</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" id="login-btn"
									><% if(!user){%>Log In<%}else{%>Log Out<% } %>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
			<img
				class="d-inline w-100"
				src="/images/pexels-julia-volk-5769320.jpg"
				alt=""
				id="wallpaper"
			/>
		</div>
		<script>
			$(document).ready(function () {
				$("#login-btn").on("click", function () {
					console.log($("#login-btn").text());
					if ($("#login-btn").text().trim() == "Log Out") {
						window.location = "/signOut";
					}
					if ($("#login-btn").text().trim() == "Log In") {
						window.location = "/login";
					}
				});
			});
		</script>
	</body>
</html>
