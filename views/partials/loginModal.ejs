<!-- Log In Modal -->
<div
	class="modal fade"
	id="logInModal"
	data-bs-backdrop="static"
	data-bs-keyboard="false"
	tabindex="-1"
	aria-labelledby="staticBackdropLabel"
	aria-hidden="true"
>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="staticBackdropLabel">Sign In</h1>
				<button
					type="button"
					class="btn-close"
					data-bs-dismiss="modal"
					aria-label="Close"
					id="portal"
				></button>
			</div>
			<div class="modal-body">
				<div class="mb-3 row">
					<label for="exampleFormControlInput1" class="col-sm-4 col-form-label"
						>Username</label
					>
					<div class="col-sm-8">
						<input
							type="text"
							class="form-control"
							id="userName"
							placeholder="user123"
							name="userName"
						/>
					</div>
				</div>
				<div class="mb-3 row">
					<label for="inputPassword" class="col-sm-4 col-form-label"
						>Password</label
					>
					<div class="col-sm-8">
						<input
							type="password"
							class="form-control"
							id="password"
							name="password"
						/>
					</div>
				</div>
				<div>
					<p id="error-message"></p>
				</div>
				<br />
				<div class="d-grid gap-2">
					<button type="button" class="btn btn-primary" id="signIn-btn">
						Sign In
					</button>
					<span style="text-align: center"
						>No account yet?<a
							type="button"
							class="btn btn-link"
							href="/signup"
						>
							Sign Up
						</a></span
					>
				</div>
			</div>
		</div>
	</div>
</div>
